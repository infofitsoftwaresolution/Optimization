[Unit]
Description=Streamlit Optimization App
After=network.target

[Service]
Type=simple
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/Optimization
Environment=PATH=/home/ec2-user/.local/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=/home/ec2-user/.local/bin/streamlit run src/dashboard.py --server.port 8501 --server.address 0.0.0.0 --server.headless true --server.runOnSave false
Restart=always
RestartSec=10
StandardOutput=file:/home/ec2-user/Optimization/dashboard.log
StandardError=file:/home/ec2-user/Optimization/dashboard.log

[Install]
WantedBy=multi-user.target

